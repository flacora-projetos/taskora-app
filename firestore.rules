rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras temporárias para permitir acesso durante configuração inicial
    // ATENÇÃO: Estas regras são permissivas e devem ser atualizadas após configurar autenticação
    
    // Permitir acesso a todas as coleções temporariamente
    match /{document=**} {
      allow read, write: if true;
    }
  }
}